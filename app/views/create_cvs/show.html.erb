
<div class="container-fluid">
  <div class="shadow-none p-3 mb-5 bg-light roundedk">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <h3><i class="far fa-list-alt"></i> CV Summary</h3>
        </div>
        <div class="col-md-4">
            <p class="float-right"> <a href="/"> <i class="fa fa-window-close" data-toggle="tooltip" title="Close"> </i></a></p>
        </div>

      </div>
    </div>
  </div>
<div class="shadow-sm p-3 mb-5 bg-white rounded">
<div class="row">
  <div class="col-lg-2">Profile</div>
  <div class="col-lg-6">
    <div class="table-responsive-sm">
        <table class="table table-sm">
          <tbody>
            <tr class="d-flex"></tr>
         </tbody>
            <tr>
              <td><strong>Full Name:</strong></td>
              <td><%=current_user.name%></td>
            </tr>

            <tr>
              <td><strong>
                <strong >
                   <%if @create_cv.identification_type == 'ID'%>
                       South Africa Legal ID:</strong>
                       <small class="text-warning">South African Citizen</small>
                   <%else%>
                   Foreign Legal ID:</strong>
                   <small class="text-warning">Not South African Citizen</small>
                   <%end%>
              </strong></td>


              <td>
                <%= @create_cv.identification_type %> -
                <%= @create_cv.id_passport %>
              </td>
            </tr>

            <tr>
              <td><strong>Date of Birth:</strong></td>
              <td><%= @create_cv.date_of_birth %></td>
            </tr>

         <tr>
           <td><strong>Gender:</strong></td>
           <td><%= @create_cv.gender %></td>
         </tr>

         <tr>
           <td><strong>Ethnicity:</strong></td>
           <td><%= @create_cv.ethnicity %></td>
         </tr>

         <tr>
           <td><strong>Place of Birth:</strong></td>
           <td><%= @create_cv.place_of_birth %></td>
         </tr>

         <tr>
           <td><strong>Disability:</strong></td>
           <td><%= @create_cv.disability %></td>
         </tr>

         <tr>
           <td><strong>Education:</strong></td>
           <td><%= @create_cv.education_type %></td>
         </tr>

        </table>
    </div>
  </div>
  <div class="col-lg-4">
    <%=render'shared/tracking'%>
  </div>
</div>


    <hr>
    <%= link_to edit_create_cv_path(@create_cv) do %>
       <i class="fas fa-edit"></i>
    <%end%> |
    <%=link_to upload_documents_index_path, class:'btn btn-warning' do %>
      Next -> <i class="fas fa-cloud-upload-alt"></i>Upload Documents
    <%end%>

  </div>
</div>
