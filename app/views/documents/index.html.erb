
<div class="container-fluid">
  <div class="shadow-sm p-3 mb-5 bg-light">
      <div class="row">
        <div class="col-md-8 text-muted">
          <h4><i class="far fa-list-alt"></i> All Documents</h4>
        </div>
        <div class="col-md-4 ">
              <%= link_to new_document_path, class: 'btn btn-success btn-sm float-right' do %>
                <i class="fas fa-plus-square"></i> Add New Document
              <% end %>
        </div>
      </div>
  </div>

<%if current_user.documents.exists?%>
<div class="shadow-sm p-3 mb-5 bg-white rounded">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>File Name</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @documents.each do |document| %>
                <%= content_tag :tr, id: dom_id(document), class: dom_class(document) do %>
                <% if current_user && document.user == current_user %>
                  <td><i class="far fa-file-pdf text-danger"></i> <%= document.title %></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td><small><span class="badge bg-success "><%= link_to document do %>
                    <i class="fas fa-list-ul text-light"></i> </span>
                    <%end%> |
                    <span class="badge bg-danger "><%= link_to document, method: :delete, data: { confirm: 'Are you sure?' } do %>
                       <i class="fas fa-trash-alt text-light"></i></span>
                      <%end%>
                    </td>
                    <% end %>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%else%>

<div class="container-fluid">
  <div class="row">
  <div class="col-lg-12 col-md-6 jumbotron text-center text-info">
    <h3 ><i class="fas fa-file"></i> No Documents</h3>
  </div>
  </div>
</div>

<%end%>
