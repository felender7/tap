
<div class="container-fluid">
  <div class="shadow-sm p-3 mb-5 bg-light">
      <div class="row">
        <div class="col-md-8 text-muted">
          <h4><i class="far fa-list-alt"></i> All Documents</h4>
        </div>
        <div class="col-md-4 ">
              <%= link_to new_document_path, class: 'btn btn-primary btn-sm float-right' do %>
                <i class="fas fa-plus-square"></i> Add New Document
              <% end %>
        </div>
      </div>
  </div>

<%if @documents.empty? %>
<div class="container-fluid">
  <div class="row">
  <div class="col-lg-12 col-md-6 jumbotron text-center text-info">
    <h3 ><i class="fas fa-file"></i> No Documents</h3>
  </div>
  </div>
</div>

<%else%>
<div class="shadow-sm p-3 mb-5 bg-white rounded">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>File</th>
              </tr>
            </thead>
            <tbody>
              <% @documents.each do |document| %>
                <%= content_tag :tr, id: dom_id(document), class: dom_class(document) do %>
                  <td><%= document.title %></td>
                  <td><%= link_to document do %>
                    <i class="fas fa-list-ul"></i>
                    <%end%> |

                    <%= link_to document, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } do %>
                       <i class="fas fa-trash-alt"></i>
                      <%end%>
                  </td>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
