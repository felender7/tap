<div class="container-fluid">
  <div class="shadow-sm p-3 mb-5 bg-light">
      <div class="row">
        <div class="col-md-8 text-muted">
          <h4><i class="far fa-list-alt"></i> ALL APPLICANTS</h4>
        </div>

      </div>
  </div>

 <div class="row">
   <div class="col-lg-12">
      <% @users.each do |user| %>
       <%=link_to user do %>
        <div class="shadow-sm p-3 mb-1 bg-light">
         <i class="fas fa fa-user"></i> <%=user.name.titlecase%> <br>
         <hr>
              <small class="text-muted"> >> <%=user.email%> | <%=user.phone%> </small> <br>
              <%if user.varification == true %>
               <span class="badge bg-danger text-light"><i class="fas fa-certificate"></i> verified</span>
               <%else%>
               <span class="badge bg-danger text-light"><i class="fas fa-certificate"></i> Not verified </span>
                <%end%>
                <span class="badge bg-success text-light"><i class="fas fa-certificate"></i> Tapscore - 8/10</span> <br>
                <span class="badge bg-success text-light"><i class="fas fa-clock"></i> <%=time_ago_in_words(user.updated_at) +" ago" %></span>
          </div>
            <%end%>
         <% end %>
   </div>
 </div>
