<div class="container-fluid">
  <div class="shadow-sm p-3 mb-5 bg-light">
      <div class="row">
        <div class="col-md-8 text-muted">
          <h4><i class="far fa-list-alt"></i> Posted Job Summary</h4>
        </div>
        <div class="col-md-4">
          <a href="/" class="float-right text-danger"> <i class="fa fa-window-close" data-toggle="tooltip" title="Close"> </i></a>
        </div>
      </div>
  </div>

<div class="shadow-sm p-3 mb-5 bg-white">
<div class="row">
  <div class="col-lg-12">
<%if current_user && @job.user == current_user%>
  <div class="card">
    <div class="card-body">
     <div class="card-header">
      <h3 class="text-success"><%= @job.title.titlecase %></h3>
      <p class="text-muted"><%= @job.description.capitalize %> <br>
        <hr>
      <small class="text-success"><i class="fas fa-map-marker-alt"></i> <%= @job.city %> | <i class="fas fa-calendar"></i> <%= @job.work_type %> | <i class="fas fa-clock"></i> <%=time_ago_in_words(@job.created_at) +" ago" %> </small>
      </p>
    <span class="badge bg-success text-light">
      <strong>Salary:</strong>
      <% if@job.salary_type =="Negotiable"%>
       <%= @job.salary_type %>
      <%else%>
      R<%= @job.salary %> - <%= @job.salary_type %>
      <%end%>
    </span>
  </div> <br>
     <p class="text-success">DUTIES <br>
       <span class="text-muted"><%= @job.duties.html_safe %></span> <br>
     </p>

     <p class="text-success">REQUIREMENTS <br>
      <span class="text-muted"><%= @job.requirements.html_safe %></span> <br>
     </p>
    <div class="card-footer">
      <%= link_to edit_job_path(@job) do %>
         <i class="fas fa-edit"></i>
      <%end%>
    </div>
  </div>
  <%else%>
   <h5 class="text-center text-danger">Not authorised to view this job!</h5>
<%end%>
</div>
</div>
</div>
</div>
</div>
