
<div class="container-fluid">
  <div class="shadow-sm p-3 mb-5 bg-light">
      <div class="row">
        <div class="col-md-8 text-muted">
          <h4><i class="far fa-list-alt"></i> Company Details Summary</h4>
        </div>
        <div class="col-md-4">
          <a href="/" class="float-right text-danger"> <i class="fa fa-window-close" data-toggle="tooltip" title="Close"> </i></a>
        </div>
      </div>
  </div>
<div class="shadow-sm p-3 mb-5 bg-white">
<div class="row">

  <div class="col-lg-2">
    <% if @company_detail.company_logo.attached? %>
      <%= image_tag @company_detail.company_logo.variant(resize:"150x150"), class:"rounded margin-bottom-20" %>
    <%else%>
    <%= image_tag gravatar_image_url(current_user.email, size: 40), height: 150, width: 150, class: "rounded margin-bottom-20" %>
    <small>Need a logo?</small>
    <%end%>

  </div>
  <div class="col-lg-6">
    <div class="table-responsive-sm">
        <table class="table table-sm">
          <tbody>
            <tr class="d-flex"></tr>
         </tbody>
      <%if current_user && @company_detail.user == current_user%>
            <tr>
              <td><strong>Full Name:</strong></td>
              <td><%=current_user.name%></td>
            </tr>
            <tr>
              <td><strong>Email:</strong></td>
              <td><%=current_user.email%></td>
            </tr>

            <tr>
              <td><strong>Company Name:</strong></td>
              <td><%= @company_detail.company_name %></td>
            </tr>

             <tr>
               <td><strong>Registration:</strong></td>
               <td><%= @company_detail.registration %></td>
             </tr>

             <tr>
               <td><strong>Tel:</strong></td>
               <td><%= @company_detail.tel %></td>
             </tr>

             <tr>
               <td><strong>Industry:</strong></td>
               <td><%= @company_detail.industry %></td>
             </tr>

          <%end%>
        </table>
    </div>
  </div>

  <div class="col-lg-4">
    <%=render'shared/tracking'%>
  </div>
</div>

    <hr>

    <%= link_to edit_company_detail_path(@company_detail) do %>
       <i class="fas fa-edit"></i>
    <%end%>
       |

    <%=link_to new_document_path, class:'btn btn-warning btn-sm' do %>
      Next - <i class="fas fa-cloud-upload-alt"></i>Upload Documents
    <%end%>

  </div>
</div>
