<div class="form-group">
    <div class="form-row">
      <div class="form-group col-md-3">
        <%= form.text_field :institution, class: 'form-control', placeholder:'Institution' %>
      </div>

      <div class="form-group col-md-3">
        <%= form.text_field :contact_person, class: 'form-control', placeholder:'Contact Person' %>
      </div>

      <div class="form-group col-md-3">
        <%= form.text_field :position, class: 'form-control' , placeholder:'Position'%>
      </div>

      <div class="form-group col-md-3">
        <%= form.text_field :contact_number, class: 'form-control', placeholder:'Contact Number' %>
         <small class="text-muted">Example: +27 11 234 4568</small>
      </div>
    </div>
</div>
