<%=render'shared/search'%>
<div class="shadow-sm p-3 mb-5 bg-white rounded">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="table-responsive">
          <table class="table table-hover">
              <% @find_jobs .each do |find_job| %>
                <%= content_tag :tr, id: dom_id(find_job), class: dom_class(find_job) do %>
                <tr>
                  <td>
                    <%= image_tag ("placeholder_avatar.png"), height: 80, width: 80, class: "rounded margin-bottom-20" %>
                  </td>
                  <td><%=link_to find_job do %>
                    <%= find_job.title.titlecase %>
                     <%end%>
                    <br>
                      <small class="text-muted"><%=find_job.work_type.upcase%></small> <br>
                    <span class="badge bg-success text-light ">
                      <i class="fas fa-clock"></i> <%=time_ago_in_words(find_job.created_at) +" ago" %>
                     </span>
                     <span class="badge bg-success text-light ">
                       <i class="fas fa-map-marker"></i> <%=find_job.city %>
                      </span>
                    </td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>
                    <% end %>
              <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
